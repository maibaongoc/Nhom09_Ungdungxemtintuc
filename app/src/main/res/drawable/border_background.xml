<!-- res/drawable/border_bg.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
            android:color="@color/black"/>
        </shape>
    </item>

    <!-- Your view background -->
    <item android:bottom="1dp"> <!-- Điều này đảm bảo rằng viền chỉ ở hai cạnh chiều dài -->
    <shape android:shape="rectangle">
        <solid android:color="@android:color/white" /> <!-- Màu nền của view -->
    </shape>
    </item>
</layer-list>